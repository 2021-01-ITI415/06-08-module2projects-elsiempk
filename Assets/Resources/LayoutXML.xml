<xml>
  <!-- This file holds info for laying out the Prospector card game. -->

  <!-- The multiplier is multiplied by the x and y attributes below. -->
  <!-- This determines how loose or tight the layout is. -->
  <multiplier x="1" y="1" />

  <!-- In the XML below, id is the number of the card -->
  <!-- x and y set position -->
  <!-- faceup is 1 if the card is face-up -->
  <!-- layer sets the depth layer so cards overlap properly -->
  <!-- hiddenby is the ids of cards that keep a card face-down -->

  <!-- Layer0, the deepest cards. -->
  <slot id="3" x="2" y="0" faceup="1" layer="0"  />
  <slot id="0" x="2" y="0" faceup="1" layer="0" hiddenby="1" />
  <slot id="1" x="0"  y="0" faceup="0" layer="0" hiddenby="2" />
  <slot id="2" x="0"  y="0" faceup="1" layer="0" hiddenby="3" />


  <!-- Layer1, the next level. -->
  <slot id="4" x="5" y="5" faceup="1" layer="1" hiddenby="5" />
  <slot id="5" x="3" y="5" faceup="0" layer="1" hiddenby="6" />
  <slot id="6" x="3"  y="5" faceup="0" layer="1" hiddenby="7" />
  <slot id="7" x="3"  y="5" faceup="0" layer="1"  />

  <!-- Layer2, the next level. -->
  <slot id="8" x="8"  y="3" faceup="1" layer="2" hiddenby="9" />
  <slot id="9"  x="6" y="3" faceup="0" layer="2" hiddenby="10" />
  <slot id="10" x="6" y="3" faceup="0" layer="2" hiddenby="11" />
  <slot id="11" x="6" y="3" faceup="0" layer="2"  />

  <!-- Layer3, the top level. -->
  <slot id="12" x="9" y="0" faceup="1" layer="3" hiddenby="13" />
  <slot id="13" x="8"  y="0" faceup="0" layer="3" hiddenby="14" />
  <slot id="14" x="8"  y="0" faceup="0" layer="3" hiddenby="15" />
  <slot id="15" x="8"  y="0" faceup="0" layer="3"  />

  <!-- Layer4, the top level. -->
  <slot id="16" x="8"  y="-3" faceup="1" layer="4" hiddenby="17" />
  <slot id="17" x="6"  y="-3" faceup="0" layer="4" hiddenby="18" />
  <slot id="18" x="6" y="-3" faceup="0" layer="4"  hiddenby="19"/>
  <slot id="19" x="6" y="-3" faceup="0" layer="4" />

  <!-- Layer5, the top level. -->
  <slot id="20" x="5" y="-4" faceup="1" layer="5" hiddenby="21"/>
  <slot id="21" x="3" y="-4" faceup="0" layer="5" hiddenby="22"/>
  <slot id="22" x="3" y="-4" faceup="0" layer="5" hiddenby="23"/>
  <slot id="23" x="3"  y="-4" faceup="0" layer="5" />

  <!-- Layer6, the top level. -->
  <slot id="24" x="2"  y="-5" faceup="1" layer="6" hiddenby="25"/>
  <slot id="25" x="0"  y="-5" faceup="0" layer="6" hiddenby="26"/>
  <slot id="26" x="0"  y="-5" faceup="0" layer="6" hiddenby="27"/>
  <slot id="27" x="0"  y="-5" faceup="0" layer="6" />

  <!-- Layer7, the next level. -->
  <slot id="28" x="-5" y="-5" faceup="1" layer="7" hiddenby="29" />
  <slot id="29" x="-3" y="-5" faceup="0" layer="7" hiddenby="30" />
  <slot id="30" x="-3"  y="-5" faceup="0" layer="7" hiddenby="31" />
  <slot id="31" x="-3"  y="-5" faceup="0" layer="7"  />

  <!-- Layer8, the next level. -->
  <slot id="32" x="-8"  y="-3" faceup="1" layer="8" hiddenby="33" />
  <slot id="33"  x="-6" y="-3" faceup="0" layer="8" hiddenby="34" />
  <slot id="34" x="-6" y="-3" faceup="0" layer="8" hiddenby="35" />
  <slot id="35" x="-6" y="-3" faceup="0" layer="8"  />

  <!-- Layer9, the top level. -->
  <slot id="36" x="-9" y="0" faceup="1" layer="9" hiddenby="37" />
  <slot id="37" x="-8"  y="0" faceup="0" layer="9" hiddenby="38" />
  <slot id="38" x="-8"  y="0" faceup="0" layer="9" hiddenby="39" />
  <slot id="39" x="-8"  y="0" faceup="0" layer="9"  />

  <!-- Layer10, the top level. -->
  <slot id="40" x="-8"  y="3" faceup="1" layer="10" hiddenby="41" />
  <slot id="41" x="-6"  y="3" faceup="0" layer="10" hiddenby="42" />
  <slot id="42" x="-6" y="3" faceup="0" layer="10"  hiddenby="43"/>
  <slot id="43" x="-6" y="3" faceup="0" layer="10" />

  <!-- Layer11, the top level. -->
