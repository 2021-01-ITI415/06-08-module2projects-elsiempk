  <slot id="47" x="-3"  y="5" faceup="0" layer="11" />

  <!-- Layer12, the top level. -->
  <slot id="48" x="2"  y="5" faceup="1" layer="12" hiddenby="49"/>
  <slot id="49" x="0"  y="5" faceup="0" layer="12" hiddenby="50"/>
  <slot id="50" x="0"  y="5" faceup="0" layer="12" hiddenby="51"/>
  <slot id="51" x="0"  y="5" faceup="0" layer="12" />



</xml>


